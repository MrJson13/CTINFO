@model Model.Admins
<div class="modal fade" tabindex="-1" role="dialog" id="adminModal">
    <div class="modal-dialog modal-sm" role="document" style="width: 600px;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">重置密码</h4>
            </div>
            <div class="modal-body" id="adminModel">
                <form class="form-horizontal" id="FormAdminResetPwd">
                    <input id="AdminGUID" name="AdminGUID" type="hidden" value="@Model.AdminGUID" />
                    <div class="form-group row">
                        <label for="shorthand" class="col-md-3 control-label"><a style="color:red">*</a>新的密码：</label>
                        <div class="col-md-8">
                            <input name="AdminPSW" value="@Model.AdminPSW" class="form-control" placeholder="新的密码（必填）">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                <button type="submit" onclick="admins.resetPwd()" class="btn btn-primary">确认提交</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>
