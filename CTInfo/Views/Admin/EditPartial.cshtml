@model Model.Admins
<div class="modal fade" id="adminModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-sm" role="document" style="width: 600px;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">新增/修改</h4>
            </div>
            <div class="modal-body" id="adminModel">
                <form class="form-horizontal" id="FormAdminEdit">
                    <input id="AdminGUID" name="AdminGUID" type="hidden" value="@Model.AdminGUID" />
                    <div class="form-group row">
                        <label for="shorthand" class="col-md-3 control-label"><a style="color:red">*</a>姓名：</label>
                        <div class="col-md-8" style="height:50px">
                            <input name="AdminName" old-val="@Model.AdminName" value="@Model.AdminName" type="text" class="form-control" placeholder="真实姓名（必填）">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="companyName" class="col-md-3 control-label"><a style="color:red">*</a>账号：</label>
                        <div class="col-md-8" style="height:50px">
                            <input id="AdminID" old-val="@Model.AdminID" name="AdminID" value="@Model.AdminID" class="form-control" placeholder="登陆账号（必填）">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                <button type="button" onclick="admins.edit()" class="btn btn-primary">确认提交</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>