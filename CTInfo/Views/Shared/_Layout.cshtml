<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/bootstrap")
    <link rel="stylesheet" href="https://cdn.bootcss.com/font-awesome/4.4.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="https://cdn.bootcss.com/ionicons/2.0.1/css/ionicons.min.css" />
    <link href="~/PlugIns/bootstrap-3.3.5-dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/PlugIns/bootstrap-3.3.5-dist/css/bootstrap-table.css" rel="stylesheet" />
    <link href="~/Content/toastr.min.css" rel="stylesheet" />

    @Scripts.Render("~/bundles/jquery")
    <script src="~/PlugIns/bootstrap-3.3.5-dist/js/bootstrap.js"></script>
    <script src="~/PlugIns/bootstrap-3.3.5-dist/js/bootstrap-table.js"></script>
    <script src="~/PlugIns/bootstrap-3.3.5-dist/js/bootstrap-table-zh-CN.js"></script>
    <link href="~/PlugIns/bootstrapvalidator/dist/css/bootstrapValidator.css" rel="stylesheet" />
    <script src="~/PlugIns/bootstrapvalidator/dist/js/bootstrapValidator.js?v=2"></script>
    <!--基础设施脚本 common-->
    <script src="~/Scripts/base/common.js?v=4"></script>
    <link href="~/Content/base.css?v=5" rel="stylesheet" />
    <link href="~/Content/index.css" rel="stylesheet" />

    <!--子页面的自定义css-->
    @RenderSection("Css", required: false)

</head>
<body class="skin-purple sidebar-mini">
    @*<div class="wrapper">*@
    <header class="main-header">
        <a href="#" class="logo">
            <span class="logo-mini">城投信息查询系统</span>
            <span class="logo-lg"><b>城投信息查询系统</b></span>
        </a>
        <nav class="navbar navbar-static-top">
            <a href="/Home/LogOut"><span class="icon-close"></span></a>
        </nav>
        <span class="STYLE1"></span>
    </header>

    <aside class="main-sidebar" style="background-color: #1b2737">
        <section class="sidebar">
            <div class="user-panel">
                <div class="pull-left image">
                    <img src="~/dist/img/avatar5.png" class="img-circle" alt="User Image" />
                </div>
                <div class="pull-left info">
                    <p>管理员</p>
                    <a href="#"><i class="fa fa-circle text-success"></i>Online</a>
                </div>
            </div>
            @*<form action="#" method="get" class="sidebar-form">
                <div class="input-group">
                    <input type="text" name="q" class="form-control" placeholder="搜索" />
                    <span class="input-group-btn">
                        <button type="submit" name="search" id="search-btn" class="btn btn-flat">
                            <i class="fa fa-search"></i>
                        </button>
                    </span>
                </div>
            </form>*@
            <ul class="sidebar-menu" id="menu">
                <li data-menu="admin" class="second-menu"><a href="~/Admin/Index"><i class="fa fa-circle-o text-yellow"></i><span>重置密码</span></a></li>
                <li data-menu='message' class="treeview second-menu">
                    <a href="#">
                        <i class="fa fa-circle-o text-aqua"></i><span>信息查询</span>
                        <span class="pull-right-container"><i class="fa fa-angle-left pull-right"></i></span>
                    </a>
                    <ul class="treeview-menu">
                        <li data-action='Information1'><a href="/Information/Index"><i class="fa fa-circle-o text-yellow"></i><span>成都市公共资源交易信息</span></a></li>
                        <li data-action='Information2'><a href="~/ProjectInfoes/Index"><i class="fa fa-circle-o text-yellow"></i><span>四川省公共资源交易信息</span></a></li>
                    </ul>
                </li>
            </ul>
        </section>
    </aside>
    <div id="div-content" class="content-wrapper" style="padding:50px 0;">
        @RenderBody()
    </div>
    <footer class="main-footer">
        <div class="pull-right hidden-xs">
            <b>Version</b> 2.3.6
        </div>
        <strong>Copyright &copy; 2017-2021 <a href="javascript:void(0)">CT</a>.</strong> All rights reserved.
    </footer>
    <div class="control-sidebar-bg"></div>
    <!--adminlit-->
    <script src="/dist/js/app.min.js"></script>
    <!--表单验证插件 jquery form-->
    <script src="~/Scripts/base/jquery.form.js"></script>
    <!--消息提示插件 toastr-->
    <script src="~/Scripts/base/toastr.min.js"></script>
    <!--alert弹出插件-->
    @*<script src="~/Scripts/base/bootbox.js"></script>*@ <!--20180118，没人用所以注释了-->
    <script src="~/Scripts/base/dialog.js"></script>
    <script type="text/javascript">
            $().ready(function () {
                $(document).click(function () {
                    $("#tab_more").parent().removeClass('now');
                    $('#cy_panel').hide();
                    $("#cy_used").parent().removeClass('xiala');
                });
                $('#more_panel,#tab_more,#cy_used,#cy_panel').click(function (event) {
                    event.stopPropagation();
                });
                $('#tab_more').on('click', function () {
                    $(this).parent().toggleClass('now');
                });
                $('#cy_used').on('click', function () {
                    $(this).parent().toggleClass('xiala');
                    $("#cy_panel").toggle();
                });
            });
    </script>
    <!--子页面的自定义script-->
    @RenderSection("scripts", required: false)
    @*</div>*@
</body>
</html>
