@{
    ViewBag.Title = "信息详情";
    var Model = ViewBag.ProjectInfo;
}

<div class="panel-body " style="overflow:scroll; width:100%;overflow:auto;">
    <div class="panel panel-default">
        <div class="panel-heading">
            信息详情
        </div>
        <div class="panel-body">
            <div class="modal-body">
                <form class="form-horizontal">
                    <div class="form-group">
                        <div class="rowGroup">
                            <label class="col-sm-1 control-label">标题:</label>
                            <div class="col-sm-7 pd7">
                                @Model.Title
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="rowGroup">
                            <label class="col-sm-1 control-label">标段名:</label>
                            <div class="col-sm-7 pd7">
                                @Model.Project
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="rowGroup">
                            <label class="col-sm-1 control-label">公示期:</label>
                            <div class="col-sm-7 pd7">
                                @Model.PublicityPeriod
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="rowGroup">
                            <label class="col-sm-1 control-label">中标企业:</label>
                            <div class="col-sm-7 pd7">
                                @Model.SuccessfulName
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="rowGroup">
                            <label class="col-sm-1 control-label">投标报价:</label>
                            <div class="col-sm-7 pd7">
                                @Model.SuccessfulPrice
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="rowGroup">
                            <label class="col-sm-1 control-label">经评审的投标价:</label>
                            <div class="col-sm-7 pd7">
                                @Model.SuccessfulReviewPrice
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="rowGroup">
                            <label class="col-sm-1 control-label">内容:</label>
                            <div class="col-sm-7 pd7">
                                @Html.Raw(Model.Content == null ? "" : Model.Content.Replace("\n", "<br />"))
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="rowGroup">
                            <label class="col-sm-1 control-label">时间:</label>
                            <div class="col-sm-7 pd7">
                                @Model.Infodate
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" onclick="history.go(-1);" class="btn btn-default">返回</button>
            </div>
        </div>
    </div>
</div>
